import random


def maxOfTwo(a, b):
    if a > b:
        print(a)
    elif a < b:
        print(b)
    else:
        print("Неочікуваний ввод чисел, вони рівні між собою")


a = float(input("Введіть перше число: "))
b = float(input("Введіть друге число: "))
maxOfTwo(a, b)


# Друге завдання
def checkOddEven(n):
    try:
        n = n.replace(',', '.')  # автоматично замінює кому на крапку
        n = float(n)
        if n <= 0:
            print("Неправильне значення аргументу")
        elif n.is_integer():
            if n % 2 == 0:
                print("Число парне")
            else:
                print("Число непарне")
        else:
            print("Це не ціле число, тому парність неможливо визначити")
    except (ValueError, TypeError):
        print("Неправильне значення аргументу")


n = input("Введіть число для перевірки парності: ")
checkOddEven(n)


