# Четверте завдання
def is_palindrome(s: str) -> bool:
    cleaned = ''.join(ch.lower() for ch in s if ch != ' ')
    return cleaned == cleaned[::-1]


input_str = input("Введіть рядок для перевірки на паліндром: ")
if is_palindrome(input_str):
    print("Це паліндром")
else:
    print("Це не паліндром")


# П'яте завдання

def factorial(n: int) -> int:
    if n < 0:
        raise ValueError("Факторіал не визначений для від’ємних чисел")
    result = 1
    for i in range(2, n + 1):
        result *= i
    return result


def combinations(n: int, k: int) -> int:
    if k < 0 or k > n:
        raise ValueError("k має бути в межах від 0 до n")
    return factorial(n) // (factorial(k) * factorial(n - k))


num = int(input("Введіть число для обчислення факторіалу: "))
try:
    print(f"Факторіал {num} дорівнює {factorial(num)}")
except ValueError as e:
    print(e)

n = int(input("\nВведіть n (загальну кількість елементів): "))
